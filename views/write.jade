extends layout

block content
  h1= title
  p Welcome to #{title}
  form(action='/write' method='POST')
    input(type='text' name='title')
    input(type='text' name='imdbRating')
    input(type='text' name='plot')
    input(type='text' name='director')
    input(type='text' name='movieLength')
    input(type='text' name='genre')
    input(type='submit')
  p #{added}